@using ADAMS.Areas.Models
@model PaginationInfo

@if (Model.TotalPages >= 1)
{
    <div class="card-footer bg-warning-subtle">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">

            <!-- 左邊：資料總筆數 -->
            <div>
                <small class="text-muted">資料總筆數：<strong>@Model.TotalCount</strong></small>
            </div>

            <!-- 右邊：分頁控制 -->
            <div class="d-flex align-items-center gap-2">
                <!-- ⭐ 加上 id="paginationForm" -->
                <form id="paginationForm" method="get" asp-action="Index" class="d-flex align-items-center gap-2">

                    <!-- 保留所有搜索條件 -->
                    @if (Model.SearchFilters != null)
                    {
                        @foreach (var filter in Model.SearchFilters)
                        {
                            if (!IsFilterEmpty(filter.Value))
                            {
                                <input type="hidden" name="@filter.Key" value="@filter.Value" />
                            }
                        }
                    }

                    <!-- ⭐ 加上隱藏的 page input -->
                    <input type="hidden" name="page" id="hiddenPage" value="@Model.CurrentPage" />

                    <!-- 每頁筆數 -->
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label mb-0" style="font-size: 0.875rem;">每頁：</label>
                        <select name="pageSize" class="form-select form-select-sm" style="width: 70px;" onchange="this.form.submit()">
                            @foreach (var size in Model.PageSizeOptions)
                            {
                                <option value="@size" selected="@(size == Model.PageSize)">
                                    @size
                                </option>
                            }
                        </select>
                    </div>

                    <!-- 上一頁按鈕 -->
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary @(Model.CurrentPage == 1 ? "disabled" : "")"
                            onclick="changePage(@Math.Max(1, Model.CurrentPage - 1))"
                            @(Model.CurrentPage == 1 ? "disabled" : "")>
                        ⬅ 上一頁
                    </button>

                    <!-- 頁碼跳轉 -->
                    <div class="d-flex align-items-center gap-1">
                        <label class="form-label mb-0" style="font-size: 0.875rem;">第</label>
                        <!-- ⭐ 改名為 pageDisplay，避免跟 hidden input 衝突 -->
                        <select name="pageDisplay" class="form-select form-select-sm" style="width: 70px;" onchange="changePage(this.value)">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <option value="@i" selected="@(i == Model.CurrentPage)">
                                    @i
                                </option>
                            }
                        </select>
                        <label class="form-label mb-0" style="font-size: 0.875rem;">頁</label>
                    </div>

                    <!-- 下一頁按鈕 -->
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                            onclick="changePage(@Math.Min(Model.TotalPages, Model.CurrentPage + 1))"
                            @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>
                        下一頁 ➡
                    </button>
                </form>
            </div>
        </div>
    </div>
}

<script>
    function changePage(page) {
        document.getElementById('hiddenPage').value = page;
        document.getElementById('paginationForm').submit();
    }
</script>

@functions {
    private bool IsFilterEmpty(object value)
    {
        if (value == null) return true;
        if (value is string str) return string.IsNullOrEmpty(str);
        if (value is int intVal) return intVal == 0;
        if (value is DateTime dateVal) return dateVal == DateTime.MinValue;
        return false;
    }
}