@{
    ViewData["Title"] = "登入";
}

<h2>登入</h2>

<form method="post">
    <div>
        <label>帳號：</label>
        <input type="text" name="account" />
    </div>
    <div>
        <label>密碼：</label>
        <input type="password" name="password" />
    </div>
    <div>
        <button type="submit">登入</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
