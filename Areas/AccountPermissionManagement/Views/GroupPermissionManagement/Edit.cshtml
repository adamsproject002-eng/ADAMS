@model ADAMS.Areas.AccountPermissionManagement.ViewModels.GroupPermissionManagement.GroupPermissionEditViewModel

@{
    ViewData["Title"] = Model.AccountGroupSN.HasValue ? "修改群組" : "新增群組";
}

<h4>@ViewData["Title"]</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="@(Model.AccountGroupSN.HasValue ? "Edit" : "Create")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="AccountGroupSN" />

    <!-- 養殖戶欄位 -->
    <div class="mb-3">
        <label class="form-label">養殖戶：</label>

        @* 營運公司 & 新增群組：可以切換養殖戶 *@
        @if (Model.IsOperationCompany && !Model.AccountGroupSN.HasValue)
        {
            <select asp-for="TenantSN"
                    class="form-select"
                    asp-items="@(new SelectList(Model.TenantOptions, "SN", "TenantName", Model.TenantSN))">
                <option value="">請選擇養殖戶</option>
            </select>
            <span asp-validation-for="TenantSN" class="text-danger"></span>
        }
        else
        {
            @* 一般養殖戶 或 修改既有群組：顯示文字，不可切換 *@
            <span>@Model.TenantName</span>
            <input type="hidden" asp-for="TenantSN" />
        }
    </div>

    <!-- 群組名稱 -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- 備註 -->
    <div class="mb-3">
        <label asp-for="Remark" class="form-label"></label>
        <input asp-for="Remark" class="form-control" />
        <span asp-validation-for="Remark" class="text-danger"></span>
    </div>

    <!-- 權限設定 -->
    <div class="mb-3 p-3 border rounded" style="background-color: #fffbe6;">
        <h5>權限設定</h5>
        <hr />

        @{
            var parents = Model.Functions
                .Where(f => f.FLevel == 1)
                .OrderBy(f => f.Sort)
                .ToList();
        }

        @foreach (var parent in parents)
        {
            var parentIdx = Model.Functions.FindIndex(f => f.FunctionSN == parent.FunctionSN);

            <!-- 父選單本身不勾選，只要存在於集合中即可 -->
            <input asp-for="Functions[parentIdx].FunctionSN" type="hidden" />
            <input asp-for="Functions[parentIdx].CName" type="hidden" />
            <input asp-for="Functions[parentIdx].FLevel" type="hidden" />
            <input asp-for="Functions[parentIdx].UpperFunctionSN" type="hidden" />
            <input asp-for="Functions[parentIdx].Sort" type="hidden" />

            var children = Model.Functions
                .Where(f => f.UpperFunctionSN == parent.FunctionSN)
                .OrderBy(f => f.Sort)
                .ToList();

            <div class="mb-1">
                <strong>@parent.CName</strong>
            </div>

            <div class="mb-3 d-flex flex-wrap">
                @foreach (var child in children)
                {
                    var idx = Model.Functions.FindIndex(f => f.FunctionSN == child.FunctionSN);

                    <div class="form-check me-3 mb-1">
                        <input asp-for="Functions[idx].IsChecked" class="form-check-input permission-checkbox" />
                        <input asp-for="Functions[idx].FunctionSN" type="hidden" />
                        <input asp-for="Functions[idx].CName" type="hidden" />
                        <input asp-for="Functions[idx].FLevel" type="hidden" />
                        <input asp-for="Functions[idx].UpperFunctionSN" type="hidden" />
                        <input asp-for="Functions[idx].Sort" type="hidden" />
                        <label class="form-check-label">
                            @child.CName
                        </label>
                    </div>
                }
            </div>

            <hr />
        }
    </div>

    <!-- 按鈕列 -->
    <div class="mt-3">
        <button type="button" class="btn btn-secondary btn-sm me-2" id="btnSelectAll">全選</button>
        <button type="button" class="btn btn-secondary btn-sm me-2" id="btnClearAll">取消</button>
        <button type="submit" class="btn btn-primary btn-sm me-2">送出</button>
        <a asp-action="Index" asp-route-tenantSN="@Model.TenantSN" class="btn btn-outline-secondary btn-sm">離開</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            var selectAllBtn = document.getElementById('btnSelectAll');
            var clearAllBtn = document.getElementById('btnClearAll');

            if (selectAllBtn) {
                selectAllBtn.addEventListener('click', function () {
                    document.querySelectorAll('.permission-checkbox')
                        .forEach(function (cb) { cb.checked = true; });
                });
            }

            if (clearAllBtn) {
                clearAllBtn.addEventListener('click', function () {
                    document.querySelectorAll('.permission-checkbox')
                        .forEach(function (cb) { cb.checked = false; });
                });
            }
        })();
    </script>
}
