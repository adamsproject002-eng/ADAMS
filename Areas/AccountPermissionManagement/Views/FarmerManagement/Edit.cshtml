@model ADAMS.Areas.AccountPermissionManagement.ViewModels.FarmerManagement.FarmerEditViewModel
@{
    ViewData["Title"] = "修改養殖戶";
}

<div class="container-fluid p-4">
    <h4 class="mb-4">@ViewData["Title"]</h4>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="SN" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- 養殖戶資料 -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <h5 class="mb-0">養殖戶資料</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">
                        <span class="text-danger">*</span> 養殖戶編號：
                    </label>
                    <div class="col-sm-4">
                        <input asp-for="TenantNum" class="form-control" />
                        <span asp-validation-for="TenantNum" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">
                        <span class="text-danger">*</span> 養殖戶名稱：
                    </label>
                    <div class="col-sm-10">
                        <input asp-for="TenantName" class="form-control" />
                        <span asp-validation-for="TenantName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">養殖戶地址：</label>
                    <div class="col-sm-10">
                        <input asp-for="TenantAddr" class="form-control" />
                        <span asp-validation-for="TenantAddr" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">負責人姓名：</label>
                    <div class="col-sm-4">
                        <input asp-for="ResponName" class="form-control" />
                        <span asp-validation-for="ResponName" class="text-danger small"></span>
                    </div>

                    <label class="col-sm-2 col-form-label text-end">負責人電話：</label>
                    <div class="col-sm-4">
                        <input asp-for="ResponPhone" class="form-control" />
                        <span asp-validation-for="ResponPhone" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">負責人Email：</label>
                    <div class="col-sm-10">
                        <input asp-for="ResponEmail" type="email" class="form-control" />
                        <span asp-validation-for="ResponEmail" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">啟用狀態：</label>
                    <div class="col-sm-4">
                        <select asp-for="IsEnable" class="form-select">
                            <option value="true">啟用</option>
                            <option value="false">停用</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label text-end">備註：</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Remark" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 按鈕 -->
        <div class="text-center">
            <button type="submit" class="btn btn-warning px-4">更新</button>
            @* <a asp-action="Details" asp-route-id="@Model.SN" class="btn btn-info px-4">查看詳情</a> *@
            <a asp-action="Index" class="btn btn-secondary px-4">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}