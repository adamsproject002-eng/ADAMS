@using ADAMS.Areas.BasicDataManagement.ViewModels.FeedDataManagement
@using ADAMS.Areas.Models
@model FeedListViewModel

@{
    ViewData["Title"] = "飼料資料管理";
}

<h4>@ViewData["Title"]</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid p-4" style="background-color: #FFFACD;">
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" asp-action="Index" class="row g-2 align-items-end">

                <!-- 養殖戶下拉（營運公司可切換，養殖戶固定） -->
                <div class="col-md-4">
                    <label class="form-label">養殖戶：</label>

                    @if (Model.IsOperationCompany)
                    {
                        <select name="tenantSN" class="form-select form-select-sm">
                            @foreach (var t in Model.TenantOptions)
                            {
                                <option value="@t.SN" selected="@(t.SN == Model.CurrentTenantSN)">
                                    @t.TenantName
                                </option>
                            }
                        </select>
                    }
                    else
                    {
                        <div class="form-control-plaintext">
                            @Model.TenantOptions.FirstOrDefault()?.TenantName
                        </div>
                        <input type="hidden" name="tenantSN" value="@Model.CurrentTenantSN" />
                    }
                </div>

                <!-- 關鍵字搜尋 -->
                <div class="col-md-3">
                    <label class="form-label">關鍵字：</label>
                    <input type="text"
                           name="keyword"
                           value="@Model.Keyword"
                           class="form-control form-control-sm"
                           placeholder="飼料名稱 / 廠商名稱" />
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary btn-sm">搜尋</button>
                    <a asp-action="Create" class="btn btn-success btn-sm">新增飼料</a>
                </div>
            </form>
        </div>
    </div>
</div>

@if (!Model.Feeds.Any())
{
    <div class="alert alert-info">尚無飼料資料</div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-sm table-hover mb-0 align-middle">
                <thead class="table-warning">
                    <tr>
                        <th style="width:60px;">No</th>
                        <th>廠商名稱</th>
                        <th>飼料名稱</th>
                        <th style="width:120px;">單位</th>
                        <th style="width:120px;">備註</th>
                        <th style="width:160px;">功能</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var startIndex = (Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize;
                        for (int i = 0; i < Model.Feeds.Count; i++)
                        {
                            var item = Model.Feeds[i];
                            <tr>
                                <td>@(startIndex + i + 1)</td>
                                <td>@item.SupplierName</td>
                                <td>@item.FeedName</td>
                                <td>@item.UnitName</td>
                                <td>
                                    @if (string.IsNullOrWhiteSpace(item.Remark))
                                    {
                                        <span>-</span>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                class="btn btn-info btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#remarkModal"
                                                data-name="@item.FeedName"
                                                data-remark="@item.Remark">
                                            查看
                                        </button>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit"
                                       asp-route-id="@item.FeedSN"
                                       class="btn btn-primary btn-sm me-1">修改</a>

                                    <form asp-action="Delete"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('確定要刪除此筆飼料資料嗎？');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.FeedSN" />
                                        <input type="hidden" name="tenantSN" value="@Model.CurrentTenantSN" />
                                        <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- 分頁共用 partial -->
        <partial name="_Pagination" model="Model.Pagination" />
    </div>

    <!-- 備註共用 Modal -->
    <partial name="_RemarkModal"
             model="@(new RemarkModalOptions { Title = "備註內容", NameLabel = "飼料名稱：" })" />
}

