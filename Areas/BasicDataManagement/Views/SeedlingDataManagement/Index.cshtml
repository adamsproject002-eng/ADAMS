@using ADAMS.Areas.BasicDataManagement.ViewModels.SeedlingDataManagement
@model SeedlingListViewModel

@{
    ViewData["Title"] = "魚苗資料管理";
}

<h4>魚苗資料管理</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-3 bg-warning-subtle">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">

            @* 養殖戶切換 *@
            <div class="col-md-3">
                <label class="form-label">養殖戶：</label>
                @if (Model.IsOperationCompany)
                {
                    <select name="tenantSN" class="form-select">
                        @foreach (var t in Model.TenantOptions)
                        {
                            <option value="@t.SN" selected="@(t.SN == Model.CurrentTenantSN)">
                                @t.TenantName
                            </option>
                        }
                    </select>
                }
                else
                {
                    <input type="hidden" name="tenantSN" value="@Model.CurrentTenantSN" />
                    <div class="pt-1">@Model.TenantOptions.FirstOrDefault()?.TenantName</div>
                }
            </div>

            @* 魚種 *@
            <div class="col-md-3">
                <label class="form-label">魚苗種類：</label>
                <select name="selectedFVSN" class="form-select">
                    <option value="0" selected="@(Model.SelectedFVSN == 0)">全部</option>
                    @foreach (var v in Model.FishVarietyOptions)
                    {
                        <option value="@v.FVSN" selected="@(v.FVSN == Model.SelectedFVSN)">
                            @v.FVName
                        </option>
                    }
                </select>
            </div>

            @* 關鍵字 *@
            <div class="col-md-3">
                <label class="form-label">關鍵字：</label>
                <input type="text" name="keyword" value="@Model.Keyword" class="form-control"
                       placeholder="魚苗名稱 / 廠商名稱" />
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-sm me-2">搜尋</button>
                <a asp-action="Create" class="btn btn-success btn-sm">新增魚苗</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">尚無魚苗資料</div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover mb-0 align-middle">
                <thead class="table-warning">
                    <tr>
                        <th class="text-center" style="width:60px;">No</th>
                        <th>魚苗名稱</th>
                        <th>廠商名稱</th>
                        <th>魚苗種類</th>
                        <th style="width:100px;">單位</th>
                        <th style="width:100px;">備註</th>
                        <th style="width:120px;">功能</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var startNo = (Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1;
                        var idx = 0;
                    }
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center">@((startNo + idx++))</td>
                            <td>@item.FryName</td>
                            <td>@item.SupplierName</td>
                            <td>@item.FishVarietyName</td>
                            <td>@item.UnitName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Remark))
                                {
                                    <button type="button"
                                            class="btn btn-info btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#remarkModal"
                                            data-name="@item.FryName"
                                            data-remark="@item.Remark">
                                        查看
                                    </button>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit"
                                   asp-route-id="@item.FrySN"
                                   class="btn btn-primary btn-sm me-1">修改</a>

                                <form asp-action="Delete"
                                      asp-route-id="@item.FrySN"
                                      asp-route-tenantSN="@Model.CurrentTenantSN"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('確定要刪除這筆魚苗資料嗎？');">
                                    <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <partial name="_Pagination" model="Model.Pagination" />
    </div>
}

<!-- 備註 Modal -->
@await Html.PartialAsync(
"_RemarkModal",
    new ADAMS.Areas.Models.RemarkModalOptions
    {
        NameLabel = "魚苗名稱：",
    })

