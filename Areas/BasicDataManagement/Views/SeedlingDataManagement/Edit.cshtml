@using ADAMS.Areas.BasicDataManagement.ViewModels.SeedlingDataManagement
@model SeedlingEditViewModel

@{
    ViewData["Title"] = Model.FrySN.HasValue ? "修改魚苗" : "新增魚苗";
}

<h4>@ViewData["Title"]</h4>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="@(Model.FrySN.HasValue ? "Edit" : "Create")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="FrySN" />

    <div class="mb-3">
        <label class="form-label">養殖戶：</label>
        @if (Model.IsOperationCompany && !Model.FrySN.HasValue)
        {
            <select asp-for="TenantSN"
                    class="form-select"
                    asp-items="@(new SelectList(Model.TenantOptions, "SN", "TenantName", Model.TenantSN))">
            </select>
        }
        else
        {
            <input type="hidden" asp-for="TenantSN" />
            <span>@Model.TenantName</span>
        }
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="FryName" class="form-label"></label>
            <input asp-for="FryName" class="form-control" />
            <span asp-validation-for="FryName" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="SupplierSN" class="form-label"></label>
            <select asp-for="SupplierSN"
                    class="form-select"
                    asp-items="@(new SelectList(Model.SupplierOptions, "SupplierSN", "SupplierName", Model.SupplierSN))">
                <option value="">請選擇供應商</option>
            </select>
            <span asp-validation-for="SupplierSN" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="FVSN" class="form-label"></label>
            <select asp-for="FVSN"
                    class="form-select"
                    asp-items="@(new SelectList(Model.FishVarietyOptions, "FVSN", "FVName", Model.FVSN))">
                <option value="">請選擇魚種</option>
            </select>
            <span asp-validation-for="FVSN" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="UnitName" class="form-label"></label>
            <input asp-for="UnitName" class="form-control" />
            <span asp-validation-for="UnitName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Remark" class="form-label"></label>
        <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Remark" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-sm me-2">送出</button>
        <a asp-action="Index" asp-route-tenantSN="@Model.TenantSN" class="btn btn-outline-secondary btn-sm">離開</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
