@using ADAMS.Areas.BasicDataManagement.ViewModels.GrowthTargetReference
@using ADAMS.Areas.Models
@model GrowthTargetListViewModel

@{
    ViewData["Title"] = "成長目標參考";
}

<h4>@ViewData["Title"]</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-3 bg-warning-subtle">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-12 col-md-auto">
                <label class="col-form-label">種類：</label>
            </div>

            <div class="col-12 col-md-auto">
                <select name="fvsn"
                        class="form-select form-select-sm"
                        onchange="this.form.submit()">
                    @foreach (var v in Model.FishVarietyOptions)
                    {
                        <option value="@v.FVSN" selected="@(v.FVSN == Model.SelectedFVSN)">
                            @v.FVName
                        </option>
                    }
                </select>
            </div>

            <div class="col-12 col-md-auto">
                <button type="submit" class="btn btn-primary btn-sm">搜尋</button>
            </div>

            <div class="col-12 col-md text-md-end mt-2 mt-md-0">
                @if (Model.IsOperationCompany)
                {
                    <a class="btn btn-primary btn-sm"
                       asp-action="Create"
                       asp-route-fvsn="@Model.SelectedFVSN">
                        新增
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info-subtle">
        種類：@Model.SelectedFishVarietyName
    </div>

    <div class="card-body p-0">

        <!-- 桌機版：表格呈現 -->
        <div class="d-none d-md-block">
            <table class="table table-bordered table-hover table-sm mb-0">
                <thead class="table-warning">
                    <tr class="text-center align-middle">
                        <th style="width: 10%">DOC(days)</th>
                        <th style="width: 20%">ABW(g/pc)</th>
                        <th style="width: 20%">DailyGrow(g/pc/day)</th>
                        <th>備註</th>
                        <th style="width: 15%">功能</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center">尚無成長目標參考資料</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="text-center">@item.DOC</td>
                                <td class="text-end">@item.ABW.ToString("0.00")</td>
                                <td class="text-end">@item.DailyGrow.ToString("0.00")</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Remark))
                                    {
                                        <button type="button"
                                                class="btn btn-info btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#remarkModal"
                                                data-name="@($"DOC {item.DOC}")"
                                                data-remark="@item.Remark">
                                            查看
                                        </button>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (Model.IsOperationCompany)
                                    {
                                        <a class="btn btn-primary btn-sm me-1"
                                           asp-action="Edit"
                                           asp-route-id="@item.GTDSN">
                                            修改
                                        </a>

                                        <form asp-action="Delete"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('確認要刪除此筆資料？');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.GTDSN" />
                                            <input type="hidden" name="fvsn" value="@Model.SelectedFVSN" />
                                            <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- 手機版：卡片呈現 -->
        <div class="d-md-none p-2">
            @if (!Model.Items.Any())
            {
                <div class="alert alert-light text-center mb-0">
                    尚無成長目標參考資料
                </div>
            }
            else
            {
                @foreach (var item in Model.Items)
                {
                    <div class="card mb-2 shadow-sm">
                        <div class="card-body p-2">
                            <div>
                                <div><strong>DOC(days)：</strong>@item.DOC</div>
                                <div><strong>ABW(g/pc)：</strong>@item.ABW.ToString("0.00")</div>
                                <div><strong>DailyGrow(g/pc/day)：</strong>@item.DailyGrow.ToString("0.00")</div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(item.Remark))
                            {
                                <div class="mt-2">
                                    <button type="button"
                                            class="btn btn-info btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#remarkModal"
                                            data-name="@($"DOC {item.DOC}")"
                                            data-remark="@item.Remark">
                                        查看備註
                                    </button>
                                </div>
                            }

                            @if (Model.IsOperationCompany)
                            {
                                <div class="mt-2 text-end">
                                    <a class="btn btn-primary btn-sm me-1"
                                       asp-action="Edit"
                                       asp-route-id="@item.GTDSN">
                                        修改
                                    </a>

                                    <form asp-action="Delete"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('確認要刪除此筆資料？');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.GTDSN" />
                                        <input type="hidden" name="fvsn" value="@Model.SelectedFVSN" />
                                        <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- 共用備註 Modal -->
<partial name="_RemarkModal"
         model="@(new RemarkModalOptions { Title = "備註內容", NameLabel = "成長目標項目：" })" />
