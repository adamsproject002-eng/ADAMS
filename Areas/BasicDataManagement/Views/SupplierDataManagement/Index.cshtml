@model ADAMS.Areas.BasicDataManagement.ViewModels.SupplierDataManagement.SupplierListViewModel

@{
    ViewData["Title"] = "廠商供應商管理";
}

<div class="container-fluid p-4" style="background-color: #FFFACD;">
    <!-- 標題列 -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a asp-action="Create" asp-route-tenantSN="@Model.CurrentTenantSN" class="btn btn-primary">
            新增供應商
        </a>
    </div>

    <!-- 成功/錯誤訊息 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 篩選列 -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">

                <div class="col-md-3">
                    <label class="form-label">養殖戶：</label>
                    @if (Model.IsOperationCompany)
                    {
                        <select name="tenantSN" class="form-select">
                            @foreach (var t in Model.TenantOptions)
                            {
                                <option value="@t.SN" selected="@(t.SN == Model.CurrentTenantSN)">
                                    @t.TenantName
                                </option>
                            }
                        </select>
                    }
                    else
                    {
                        <input type="text" class="form-control"
                               value="@Model.TenantOptions.FirstOrDefault()?.TenantName" readonly />
                        <input type="hidden" name="tenantSN" value="@Model.CurrentTenantSN" />
                    }
                </div>

                <div class="col-md-3">
                    <label class="form-label">關鍵字：</label>
                    <input type="text" name="keyword" value="@Model.Keyword" class="form-control"
                           placeholder="廠商代號/名稱/聯絡人/電話" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">營業型態：</label>
                    <select name="supplierType" class="form-select">
                        <option value="0" selected="@(Model.SupplierType == 0)">全部</option>
                        <option value="1" selected="@(Model.SupplierType == 1)">飼料</option>
                        <option value="2" selected="@(Model.SupplierType == 2)">魚苗</option>
                        <option value="3" selected="@(Model.SupplierType == 3)">其他</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-sm btn-primary me-2">搜尋</button>
                </div>
            </form>
        </div>
    </div>

    <!-- 資料表格 -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Suppliers.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">No</th>
                                <th>廠商代號</th>
                                <th>廠商名稱</th>
                                <th>聯絡人</th>
                                <th>電話</th>
                                <th>營業型態</th>
                                <th>備註</th>
                                <th style="width: 120px;">功能</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (item, idx) in Model.Suppliers.Select((s, i) => (s, i + 1 + (Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize)))
                            {
                                <tr>
                                    <td class="text-center">@idx</td>
                                    <td>@item.SupplierNum</td>
                                    <td>@item.SupplierName</td>
                                    <td>@item.ContactName</td>
                                    <td>@item.ContactPhone</td>
                                    <td>@item.SupplierTypeName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Remark))
                                        {
                                            <button type="button"
                                                    class="btn btn-info btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#remarkModal"
                                                    data-remark="@item.Remark"
                                                    data-name="@item.SupplierName">
                                                查看
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.SupplierSN"
                                               class="btn btn-warning btn-sm">修改</a>

                                            <form asp-action="Delete"
                                                  asp-route-id="@item.SupplierSN"
                                                  asp-route-tenantSN="@Model.CurrentTenantSN"
                                                  method="post"
                                                  onsubmit="return confirm('確定要刪除這筆供應商資料嗎？');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 共用分頁 partial -->
                <partial name="_Pagination" model="Model.Pagination" />
            }
            else
            {
                <div class="text-center py-5">
                    <p class="text-muted">尚無供應商資料</p>
                    <a asp-action="Create" asp-route-tenantSN="@Model.CurrentTenantSN" class="btn btn-primary">新增供應商</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- 備註 Modal -->
<div class="modal fade" id="remarkModal" tabindex="-1" aria-labelledby="remarkModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title" id="remarkModalLabel">備註內容</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2">
                    <strong>供應商名稱：</strong>
                    <span id="remarkSupplierName"></span>
                </div>
                <hr />
                <div id="remarkContent" style="white-space: pre-wrap; max-height: 300px; overflow-y: auto;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const remarkModal = document.getElementById('remarkModal');
            if (!remarkModal) return;

            remarkModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const remark = button.getAttribute('data-remark');
                const name = button.getAttribute('data-name');

                document.getElementById('remarkSupplierName').textContent = name;
                document.getElementById('remarkContent').textContent = remark;
            });
        })();
    </script>
}
