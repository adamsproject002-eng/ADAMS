@model ADAMS.Areas.BasicDataManagement.ViewModels.TimeSegmentSetting.TimeZoneEditViewModel

@{
    ViewData["Title"] = Model.TimeZoneSN.HasValue ? "修改時間區段" : "新增時間區段";
}

<h4>@ViewData["Title"]</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="@(Model.TimeZoneSN.HasValue ? "Edit" : "Create")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TimeZoneSN" />
    <input type="hidden" asp-for="TenantSN" />

    <!-- 養殖戶 -->
    <div class="mb-3">
        <label class="form-label">養殖戶：</label>
        @if (Model.IsOperationCompany && !Model.TimeZoneSN.HasValue)
        {
            <select asp-for="TenantSN"
                    class="form-select"
                    asp-items="@(new SelectList(Model.TenantOptions, "SN", "TenantName"))">
            </select>
        }
        else
        {
            <span>@Model.TenantName</span>
        }
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="TimeZoneNum" class="form-label"></label>
            <input asp-for="TimeZoneNum" class="form-control" />
            <span asp-validation-for="TimeZoneNum" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="TimeZoneDesc" class="form-label"></label>
            <input asp-for="TimeZoneDesc" class="form-control" />
            <span asp-validation-for="TimeZoneDesc" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Remark" class="form-label"></label>
        <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Remark" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-sm me-2">送出</button>
        <a asp-action="Index"
           asp-route-tenantSN="@Model.TenantSN"
           class="btn btn-outline-secondary btn-sm">
            離開
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
